	<license>http://opensource.org/licenses/MIT MIT</license>
	<description>Cron events for forums</description>
	<files>
		<filename plugin="forum">forum.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_cron_forum.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/mail">
				<field name="email_transport_mechanism" type="mailers" default="0" label="PLG_CRON_FORUM_EMAIL_TRANSPORT_MECHANISM_LABEL" description="PLG_CRON_FORUM_EMAIL_TRANSPORT_MECHANISM_DESC" />
			</fieldset>
		</fields>
	</config>
